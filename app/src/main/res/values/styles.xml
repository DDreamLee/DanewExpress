<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/btn_normal</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextColor">@color/text_black</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/text_black_light</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <item name="android:windowEnterAnimation">@transition/explode</item>
        <item name="android:windowReenterTransition">@transition/explode</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/text_black</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    <style name="labels_style">
        <item name="android:background">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
