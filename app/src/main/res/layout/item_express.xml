<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:background="@drawable/item_selector">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">
            <ImageView
                android:id="@+id/express_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/ic_md_truck"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/expressPackId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/item_express_packid"
                        android:textSize="@dimen/item_text_size"
                        android:textColor="@color/text_black"/>
                    <TextView
                        android:id="@+id/expressPackId_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/item_express_packid"
                        android:textSize="@dimen/item_text_size"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/nowAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/item_express_nowAddress"
                        android:textSize="@dimen/item_text_size"
                        android:textColor="@color/text_black"/>
                    <TextView
                        android:id="@+id/nowAddress_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/item_express_nowAddress"
                        android:textSize="@dimen/item_text_size"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/item_express_time"
                        android:textSize="@dimen/item_text_size"
                        android:textColor="@color/text_black"/>
                    <TextView
                        android:id="@+id/time_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/item_express_time"
                        android:textSize="@dimen/item_text_size"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/startAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/item_express_startAddress"
                        android:textSize="@dimen/item_text_size"
                        android:textColor="@color/text_black"/>
                    <TextView
                        android:id="@+id/startAddress_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/item_express_startAddress"
                        android:textSize="@dimen/item_text_size"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/endAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/item_express_endAddress"
                        android:textSize="@dimen/item_text_size"
                        android:textColor="@color/text_black"/>
                    <TextView
                        android:id="@+id/endAddress_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/item_express_endAddress"
                        android:textSize="@dimen/item_text_size"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/view_divide_line"></include>

</LinearLayout>
